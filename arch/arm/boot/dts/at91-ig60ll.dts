/dts-v1/;

#include "at91-som60x2.dtsi"
#include "at91-ig60.dtsi"

/ {
	model = "Laird IG60 LL";
	compatible = "laird,ig60ll", "laird,som60x2", "atmel,sama5d36", "atmel,sama5d3", "atmel,sama5";

	chosen {
		stdout-path = "serial2:115200n8";
	};

	gpio {
		compatible = "gpio-of-helper";
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio_misc>;

		term {
			gpio-name = "term";
			gpio = <&pioA 28 GPIO_ACTIVE_HIGH>;
			output;
			init-low;
		};

		rs232en {
			gpio-name = "rs232en";
			gpio = <&pioA 22 GPIO_ACTIVE_HIGH>;
			output;
			init-low;
		};
	};
};

&pinctrl {
	board {
		pinctrl_gpio_misc: gpio_misc {
			atmel,pins =
				<AT91_PIOA 22 AT91_PERIPH_GPIO AT91_PINCTRL_NONE>,
				<AT91_PIOA 28 AT91_PERIPH_GPIO AT91_PINCTRL_NONE>;
		};
	};
};

&dbgu {
	status = "disabled";
};
